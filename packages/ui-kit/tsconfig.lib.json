{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../dist/chrome-ext",
        "types": ["vite/client", "chrome"],
        "baseUrl": "./",
        "target": "ES2023",
        "lib": ["ES2023", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
    },
    "exclude": [
        "out-tsc",
        "dist",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.vue",
        "src/**/*.test.vue",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue"]
}
